<p id="notice"><%= notice %></p>
<div class="page-header">
  <%= link_to new_field_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Field
  <% end %>
  <h1>Field</h1>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Field</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @fields) do |field| %>
          <td><%= field.name %></td>
          <td><%= link_to 'Show', field %></td>
          <td><%= link_to 'Edit', edit_field_path(field) %></td>
          <td><%= link_to 'Destroy', field, name: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
